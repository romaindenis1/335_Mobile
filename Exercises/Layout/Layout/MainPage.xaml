<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layout.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <!-- Conteneur principal -->
            <StackLayout Spacing="10" Margin="10" HorizontalOptions="Center">

                <!-- Ligne pour les yeux -->
                <StackLayout Orientation="Horizontal" Spacing="20" HorizontalOptions="CenterAndExpand">
                    <!-- Œil gauche (vert) -->
                    <BoxView Color="Green"
                             WidthRequest="100"
                             HeightRequest="80" />

                    <!-- Œil droit (avec texte) -->
                    <Grid HorizontalOptions="Center">
                        <!-- La BoxView (le fond beige) -->
                        <BoxView Color="#F5F5DC" 
             WidthRequest="100" 
             HeightRequest="80" />

                        <!-- Le texte centré sur la Box -->
                        <Label Text="RIGHT EYE"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           HorizontalTextAlignment="Center"
           VerticalTextAlignment="Center"
           TextColor="Black"
           FontAttributes="Bold"/>
                    </Grid>
                </StackLayout>
                <!-- Ligne supérieure de la mâchoire (4 carrés gris) -->
                <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                </StackLayout>

                <!-- Ligne inférieure (4 carrés, 2 gris foncés au milieu) -->
                <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                        <BoxView Color="Gray" WidthRequest="25" HeightRequest="50"/>
                        <BoxView Color="DarkGray" WidthRequest="25" HeightRequest="50"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Spacing="5" HorizontalOptions="Center">
                        <BoxView Color="DarkGray" WidthRequest="25" HeightRequest="50"/>
                        <BoxView Color="Gray" WidthRequest="25" HeightRequest="50"/>
                    </StackLayout>
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                    <BoxView Color="Gray" WidthRequest="50" HeightRequest="50" />
                </StackLayout>

            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>