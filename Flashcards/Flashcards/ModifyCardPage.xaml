<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flashcards.ModifyCardPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Edit Card" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
        <Entry Text="{Binding SelectedCard.Title}" Placeholder="Title"/>
        <Editor Text="{Binding SelectedCard.Description}" Placeholder="Description" HeightRequest="100"/>
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button Text="Save" Command="{Binding SaveCardCommand}"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>