<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Flashcards.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Flashcards"
    Shell.FlyoutBehavior="Disabled"
    Title="Flashcards">
    <TabBar>
        <ShellContent 
            Title="Decks" 
            ContentTemplate="{DataTemplate local:MainPage}" 
            Route="MainPage" />

        <ShellContent 
            Title="Modify" 
            ContentTemplate="{DataTemplate local:ModifyCardPage}" 
            Route="ModifyCardPage" />

        <ShellContent 
            Title="Add" 
            ContentTemplate="{DataTemplate local:AddCardPage}" 
            Route="AddCardPage" />

        <ShellContent 
            Title="Answer" 
            ContentTemplate="{DataTemplate local:AnswerPage}" 
            Route="AnswerPage" />

        <ShellContent 
            Title="Results" 
            ContentTemplate="{DataTemplate local:ResultsPage}" 
            Route="ResultsPage" />
    </TabBar>
</Shell>
